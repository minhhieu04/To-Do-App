<body>
    <div class="container">
        <h1>Verify OTP Code</h1>
        <form id="verifyForm" action="/auth/verify" method="POST">
            <label for="otp">An OTP has been sent to your email, please check and enter it here:</label>
            <input type="text" id="otp" name="otpCode" placeholder="Enter OTP Code" required>
            <button type="submit">Verify</button>
        </form>
        <div id="messagePopup" class="message-popup"></div>
        <div class="resend">
            <p>You haven't received the code or the code has expired?</p>
            <button type="button" id="resendButton">Resend OTP</button>
        </div>
    </div>

    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <form id="resendForm" action="/auth/resend" method="POST">
                <label for="email">Enter your email:</label>
                <input id="email" type="email" id="email" name="email" placeholder="Enter your email" required>
                <div id="messagePopup" class="message-popup"></div>
                <button id="sendOtpButton" type="submit">Send OTP</button>
            </form>
        </div>
    </div>

