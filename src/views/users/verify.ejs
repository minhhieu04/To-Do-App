        // Mở modal khi nhấn nút resend
        document.getElementById('resendButton').addEventListener('click', function () {
            document.getElementById('myModal').style.display = 'block';
        });

        // Đóng modal khi nhấn vào nút close hoặc click ra ngoài modal
        var modal = document.getElementById('myModal');
        var closeBtn = document.getElementsByClassName('close')[0];
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        };
        closeBtn.onclick = function () {
            modal.style.display = 'none';
        };

        // Xử lý form gửi OTP
        document.getElementById('resendForm').addEventListener('submit', function (event) {
            event.preventDefault();
            const email = document.getElementById('email').value;
            axios.post('/auth/resend', { email })
                .then(function (response) {
                    console.log('Response:', response);
                    const status = response.status;
                    if (status === 201) {
                        alert(response.data.message);
                        document.getElementById('myModal').style.display = 'none';
                    } else {
                        alert('Failed to resend OTP. Please try again.');
                    }
                })
                .catch(function (error) {
                    console.error('Error:', error);
                    if (error.response) {
                        const responseErrorMessage = error.response.data.message
                        const responseErrorStatus = error.response.status

                        if (responseErrorStatus === 400) {
                            alert(responseErrorMessage);
                        } else if (responseErrorStatus === 404) {
                            alert(responseErrorMessage);
                        } else {
                            alert('An error occurred. Please try again.');
                        }
                    } else {
                        alert('An error occurred. Please try again.');
                    }
                });
        });



        document.addEventListener('DOMContentLoaded', function () {
            const message = '<%= message %>';

            if (message) {
                const messagePopup = document.getElementById('messagePopup');
                messagePopup.innerText = message;
                messagePopup.style.display = 'block';

                // Tự đóng popup sau một khoảng thời gian
                setTimeout(function () {
                    messagePopup.style.display = 'none';
                }, 5000);
            }
        });
